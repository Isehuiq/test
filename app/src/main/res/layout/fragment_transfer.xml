<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transferFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="轉帳"
            android:textSize="28sp"
            android:gravity="center"
            android:background="#00B0B0"
            android:textStyle="bold"/>

        <ScrollView
            android:id="@+id/ScrollView_transfer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="5sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="轉出帳號"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/t1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.5"
                        android:text=""
                        android:background="@drawable/rectangle"
                        android:layout_marginVertical="20dp"
                        android:padding="16dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text=""
                        android:textSize="18sp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="手機號碼"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.5"
                        android:text=""
                        android:background="@drawable/rectangle"
                        android:layout_marginVertical="20dp"
                        android:padding="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text=""
                        android:textSize="18sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="轉帳金額"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.5"
                        android:text=""
                        android:background="@drawable/rectangle"
                        android:layout_marginVertical="20dp"
                        android:padding="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text=""
                        android:textSize="18sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="自己備註"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.5"
                        android:text=""
                        android:background="@drawable/rectangle"
                        android:layout_marginVertical="20dp"
                        android:padding="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text=""
                        android:textSize="18sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="對方備註"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.5"
                        android:text=""
                        android:background="@drawable/rectangle"
                        android:layout_marginVertical="20dp"
                        android:padding="16dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text=""
                        android:textSize="18sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="轉帳日期"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/transfer_date_ET"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.5"
                        android:text="2023/3/21"
                        android:background="@drawable/rectangle"
                        android:layout_marginVertical="20dp"
                        android:gravity="center"
                        android:padding="16dp" />
                    <ImageButton
                        android:id="@+id/transfer_date_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@drawable/calender"
                        android:layout_marginVertical="20dp"
                        android:gravity="center"
                        android:padding="16dp"
                        android:onClick="dateSelect" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="請慎防詐騙，勿聽信他人指示操作!轉帳交易完成後，會從您的帳戶內扣款轉給他人。"
                    android:textSize="18sp"
                    android:textColor="#EA0000"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20sp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="確認"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="100dp"
                    android:paddingHorizontal="20sp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>